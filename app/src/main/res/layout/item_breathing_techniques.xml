<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#33000000"
    app:strokeWidth="1dp"
    app:strokeColor="#26FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/techniqueName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/difficultyIcon"
            tools:text="Box Breathing" />

        <ImageView
            android:id="@+id/difficultyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_difficulty_1"
            android:contentDescription="@string/difficulty_level"
            app:layout_constraintTop_toTopOf="@id/techniqueName"
            app:layout_constraintBottom_toBottomOf="@id/techniqueName"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/ic_difficulty_1" />

        <TextView
            android:id="@+id/techniqueDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#E0FFFFFF"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/techniqueName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Classic technique used by Navy SEALs and stress management experts." />

        <TextView
            android:id="@+id/techniqueInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/pattern"
            android:textColor="#80FFFFFF"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/techniqueDescription"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/techniqueInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/cyan_400"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/techniqueInfoLabel"
            app:layout_constraintBottom_toBottomOf="@id/techniqueInfoLabel"
            app:layout_constraintStart_toEndOf="@id/techniqueInfoLabel"
            tools:text="4-4-4-4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="@string/view_details"
            app:tint="#80FFFFFF"
            app:layout_constraintTop_toTopOf="@id/techniqueInfoLabel"
            app:layout_constraintBottom_toBottomOf="@id/techniqueInfoLabel"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
